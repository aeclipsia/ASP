@model List<Categoria>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    string email = Context.Session.GetObject<User>("User").Email;
}

<div class="container">
    <div class="data-flex justify-content-between align-items-center">
        <h2>Categorias</h2>
        Session iniciada como: @email
    </div>
    @if (Model!=null&&Model.Any()){
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Código</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var categoria in Model){
                    <tr>
                        <td>@categoria.Id</td>
                        <td>@categoria.Name</td>
                        <td>@categoria.Code</td>
                        <td>
                            <a class="btn btn-success" asp-controller="Ofertas" asp-action="Detail" asp-route-id="@categoria.Id">Detalles</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>