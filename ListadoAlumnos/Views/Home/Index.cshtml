@model IEnumerable<AlumnoModel>

@{
    ViewData["Title"] = "Home Page";
}

<nav class="navbar navbar-dark bg-dark px-5">
    <span class="navbar-brand mb-0 text-light display-2">Listado de Alumnos</span>
</nav>
<div class="container">
    <h1><a asp-action="Add">Crear Nuevo</a></h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">NOMBRE</th>
                <th scope="col">APELLIDOS</th>
                <th scope="col">TELÉFONO</th>
            </tr>
        </thead>
        <tbody>
            @{
                int id = 1;
            }
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nombre</td>
                    <td>@item.Apellidos</td>
                    <td>@item.Telefono</td>
                    <td></td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@id">Editar</a> | <a asp-action="Delete" asp-route-id="@id">Borrar</a> | <a asp-action="Details" asp-route-id="@id">Ver</a>
                    </td>
                </tr>
                id++;
            }
        </tbody>
    </table>
</div>