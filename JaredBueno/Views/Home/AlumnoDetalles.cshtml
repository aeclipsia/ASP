@{
}

<a asp-action="Index" class="btn btn-outline-secondary mb-3">&larr; Back</a>

<h2>Detalles del Alumno</h2>

<div class="card p-4 shadow-sm" style="max-width:50%">
    <p><strong>Nombre Completo:</strong> @Model.Nombre</p>
    <p><strong>Usuario:</strong> @Model.Usuario</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Ciclo:</strong> @Model.Ciclo</p>
    <p><strong>Curso:</strong> @Model.Curso</p>
    
    <form asp-action="Editar" method="post">
        <div class="mb-3" style="display:none">
            <input type="email" class="form-control" name="Email" value="@Model.Email" readonly>
        </div>
        <button type="submit" class="btn btn-primary w-auto">Editar</button>
    </form>
</div>
