@using Practica6.Helpers
@model List<User>

@{
    ViewData["Title"] = "Estudiantes en la oferta";
    string email = Context.Session.GetObject<User>("User").Email;
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center">
        <h2>@ViewData["Title"]</h2>
        <span class="text-muted">Sesión iniciada como: @email</span>
    </div>

    @if (Model != null && Model.Any())
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>DNI</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.Id</td>
                        <td>@category.Name</td>
                        <td>@category.Dni</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No hay estudiantes disponibles para esta oferta.</p>
    }
</div>