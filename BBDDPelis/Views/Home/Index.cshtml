@model List<Peliculas>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row gap-2">
    @foreach (Peliculas p in Model){
        <div class="card col-md-3">
            <img class="card-img-top" src="@p.Imagen">
            <div class="card-body">
                <h5 class="card-title">@p.Titulo</h5>
                <p class="card-text">@p.Genero</p>
            </div>
        </div>
    }
    </div>
</div>
