@{
    ViewData["Title"] = "Home Page";
}

<div class="md-3">
    <form asp-controller="Home" asp-action="getDatos">
        <input type="radio" name="sexo" value="M"/>Mujer
        <br />
        <input type="radio" name="sexo" value="H" />Hombre
        <br />
        <input type="radio" name="sexo" value="O" />Otros
        <hr />
        <input type="checkbox" name="aficiones" value="lectura" />Leer
        <input type="checkbox" name="aficiones" value="viajes" />Viajar
        <input type="checkbox" name="aficiones" value="deporte" />Hacer deporte
        <hr />
        <select name="ciclo">
            <option value="DAW">Desarrollo de Aplicaciones Web</option>
            <option value="ASIR">Sistemas Informáticos y Redes</option>
        </select>
        <button type="submit" class="btn btn-primary">Enviar</button>
    </form>
</div>
